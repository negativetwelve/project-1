<% provide(:title, 'User Info') %>
<h1> <%= @user.name %> </h1>

<div class="row">
  <div class="span6 offset3">
    <h2>
    </h2>
    <h2>
      <%= @user.email %>
    </h2>
  </div>
</div>

<div class="span8">
  <% if @user.posts.any? %>
    <h3>Posts (<%= @user.posts.count %>)</h3>
    <ol class="Posts">
      <%= render @posts %>
    </ol>
  <% end %>
</div>
